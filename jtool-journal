#!/bin/bash

# Usage: jtool-journal [OPTIONS] [MATCHES]

# Safety
set -o errexit -o pipefail -o nounset -o noclobber

# Bash extensions
set +o posix
shopt -s lastpipe

# Options
declare -a JCTL_OPT=(
    --output=json
)

# `journalctl` with JSON output!
journalctl ${JCTL_OPT} "$@"

exit

# vim:syntax=sh:et:sw=4:ts=4:ai
